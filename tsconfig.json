{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "lib": [
      "esnext",
      "es2015",
      "dom"
    ]
  },
  "include": [
    "./src/**/*"
  ]
}